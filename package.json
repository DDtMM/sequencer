{
  "name": "sequencer",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:github-pages": "ng build --base-href /sequencer/ && npx cpy dist/sequencer/browser/index.html dist/sequencer/browser/ --rename 404.html",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:sequencer": "node dist/sequencer/server/server.mjs",
    "generate:schema": "typescript-json-schema src/app/models/song.model.ts SongConfig --required --out public/songs/song.schema.json",
    "watch:schema": "chokidar \"src/app/models/**/*.ts\" -c \"npm run generate:schema\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.4.1",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-server": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@angular/ssr": "^21.1.3",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tone": "^15.1.22",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "autoprefixer": "^10.4.24",
    "chokidar-cli": "^3.0.0",
    "cpy-cli": "^7.0.0",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.2",
    "typescript-json-schema": "^0.67.1",
    "vitest": "^4.0.8"
  }
}
